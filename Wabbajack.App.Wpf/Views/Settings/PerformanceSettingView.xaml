<rxui:ReactiveUserControl
    x:Class="Wabbajack.PerformanceSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Wabbajack"
    xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="local:PerformanceSettingVM"
    mc:Ignorable="d">
    <Grid Margin="0, 0, 0, 8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="HumanNameTextBlock" FontWeight="Normal" VerticalAlignment="Center" />
        <TextBox x:Name="MaxTasksTextBox" Grid.Column="2" TextAlignment="Center" Width="32" Height="32" />

    </Grid>
</rxui:ReactiveUserControl>
